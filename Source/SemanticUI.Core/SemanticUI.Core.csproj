        <None Remove="css\semantic-ui\themes\default\assets\fonts\outline-icons.svg" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\outline-icons.ttf" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\outline-icons.woff" />
