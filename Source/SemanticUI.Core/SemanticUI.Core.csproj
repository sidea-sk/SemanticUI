<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <AssemblyName>Sidea.SemanticUI.Core</AssemblyName>
        <RootNamespace>Sidea.SemanticUI.Core</RootNamespace>
        <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
        <Version>1.0.17</Version>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.FileProviders.Abstractions" Version="3.1.6" />
        <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.6" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="css\semantic-ui\semantic.css" />
        <None Remove="css\semantic-ui\semantic.js" />
        <None Remove="css\semantic-ui\semantic.min.css" />
        <None Remove="css\semantic-ui\semantic.min.js" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\brand-icons.eot" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\brand-icons.svg" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\brand-icons.ttf" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\brand-icons.woff" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\brand-icons.woff2" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\icons.eot" />
        <None Remove="css\semantic-ui\themes\default\assets\fonts\icons.otf" />
