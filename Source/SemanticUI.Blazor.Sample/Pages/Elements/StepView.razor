@page "/Elements/Step"

<h1>Step</h1>

<Example Header="Step"
         Text="A single step">
    <StepPanel>
        <Step>
            Shipping
        </Step>
    </StepPanel>
</Example>

<h1>Groups</h1>

<Example Header="Steps"
         Text="A set of steps">
    <StepPanel>
        <Step IconName="truck">
            <StepTitle>
                Shipping
            </StepTitle>
            <StepDescription>
                Choose your shipping options
            </StepDescription>
        </Step>
        <Step>
            <StepTitle>
                Billing
            </StepTitle>
            <StepDescription>
                Enter billing information
            </StepDescription>
        </Step>
    </StepPanel>

    <br />

    <StepPanel>
        <Step IconName="truck"
              Decorations="StepDecorations.Link">
            <StepTitle>
                Shipping
            </StepTitle>
            <StepDescription>
                Choose your shipping options
            </StepDescription>
        </Step>
        <Step Decorations="StepDecorations.Link">
            <StepTitle>
                Billing
            </StepTitle>
            <StepDescription>
                Enter billing information
            </StepDescription>
        </Step>
    </StepPanel>
</Example>

