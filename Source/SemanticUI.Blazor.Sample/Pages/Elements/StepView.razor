         Text="A step can be highlighted as active">

    <StepPanel>
        <Step Decorations="StepDecorations.Active"
              IconName="payment">
            <StepTitle>
                Billing
            </StepTitle>
            <StepDescription>
                Enter billing information
            </StepDescription>
        </Step>
    </StepPanel>
</Example>

<Example Header="Completed"
