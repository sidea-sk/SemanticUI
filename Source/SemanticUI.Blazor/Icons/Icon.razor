@inherits SemanticComponent
@namespace Sidea.SemanticUI.Blazor

<i class="@Class()" @onclick="OnClick"></i>

@code {

    private IconData _data = new IconData();

    public Icon() : base("icon")
    {
    }

    [Parameter]
    public IconData Data
    {
        get => _data;
        set => _data = value ?? new IconData();
    }

    [Parameter]
    public string Name
    {
        get => _data.Name;
        set => _data.Name = value;
    }

    [Parameter]
    public Size Size
    {
        get => _data.Size;
        set => _data.Size = value;
    }

    [Parameter]
    public Color Color
    {
        get => _data.Color;
        set => _data.Color = value;
    }

    [Parameter]
    public IconDecorations Decorations
    {
        get => _data.Decorations;
        set => _data.Decorations = value;
    }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    protected override IEnumerable<string> Classes()
    {
        yield return _data.ToClass();
    }
}
