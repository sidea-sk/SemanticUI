@inherits SemanticComponent
@namespace Sidea.SemanticUI.Blazor

<div class="@Class()">
    @ChildContent
</div>

@code {
    public ButtonsGroup() : base("buttons")
    {
    }

    [Parameter]
    public Orientation Orientation { get; set; } = Orientation.Horizontal;

    [Parameter]
    public ButtonDecoration Decoration { get; set; } = ButtonDecoration.NoDecoration;

    [Parameter]
    public Amount Amount { get; set; }

    protected override IEnumerable<string> Classes()
    {
        yield return this.Orientation.ToClass();
        yield return this.Decoration.ToClass();
        yield return this.Amount.ToClass(of: "");
    }
}
