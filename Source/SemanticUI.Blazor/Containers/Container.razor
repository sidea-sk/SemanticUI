@inherits SemanticComponent
@namespace Sidea.SemanticUI.Blazor

<div class="@Class()">
    @ChildContent
</div>

@code {
    public Container(): base("container")
    {
    }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Fluid { get; set; }

    [Parameter]
    public Alignment Alignment { get; set; } = None;

    protected override IEnumerable<string> Classes()
    {
        yield return this.Alignment.ToClass();
        yield return this.Fluid.ToClassIf("fluid");
    }
}
