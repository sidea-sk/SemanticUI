@inherits SemanticComponent
@namespace Sidea.SemanticUI.Blazor

<div class="@Class()">
    @ChildContent
</div>

@code {
    public StepPanel() : base("steps")
    {
    }

    [Parameter]
    public StepPanelDecorations Decorations { get; set; }

    [Parameter]
    public Position Attached { get; set; }

    [Parameter]
    public Size Size { get; set; }

    [Parameter]
    public Amount StepsCount { get; set; }

    protected override IEnumerable<string> Classes()
    {
        yield return this.Decorations.ToClass();
        yield return this.Attached.ToAttachedClass();
        yield return this.Size.ToClass();
        yield return this.StepsCount.ToClass(of: string.Empty);
    }
}
